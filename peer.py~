import socket, struct

class Peer:
    def __init__(self, torrent, info):
        self.ip = info[0]
        self.port = info[1]
        self.torrent = torrent

    def handshake(self):
        return struct.pack(
            ">B19s8x20s20s",
            19,
            b'BitTorrent protocol',
            chr(0) * 8,
            self.torrent.info_hash,
            self.torrent.peer_id
            )
